# Database Configuration
# استخدم إما PostgreSQL أو MySQL
DATABASE_URL="mysql://root:@localhost:3306/fateh_platform_db"
# أو للـ PostgreSQL:
# DATABASE_URL="postgresql://username:password@localhost:5432/fateh_platform_db"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="fateh-platform-secret-key-2025-very-secure-random-string-change-this-in-production"

# Google OAuth (اختياري - للتسجيل عبر Google)
GOOGLE_CLIENT_ID="your-google-client-id-here"
GOOGLE_CLIENT_SECRET="your-google-client-secret-here"

# Google Gemini AI API (مطلوب للمساعد الذكي)
# احصل على مفتاح مجاني من: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="your-gemini-api-key-here"

# Payment Configuration (اختياري - للدفع الإلكتروني)
# Stripe
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key-here"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key-here"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret-here"

# PayPal
PAYPAL_CLIENT_ID="your-paypal-client-id-here"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret-here"
PAYPAL_ENVIRONMENT="sandbox"
PAYPAL_PRODUCT_ID="your-paypal-product-id-here"

# Application Environment
NODE_ENV="development"

# Optional: Custom App Configuration
APP_NAME="منصة فتح للتعلّم الذكي"
APP_URL="http://localhost:3000"
APP_DESCRIPTION="منصة تعليمية ذكية مجانية تفتح لك أبواب المعرفة بتقنيات الذكاء الاصطناعي"

# Security Settings (للإنتاج)
# SECURE_COOKIES="true"
# CSRF_SECRET="your-csrf-secret-here"

# Email Configuration (مطلوب لنظام الإشعارات)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

